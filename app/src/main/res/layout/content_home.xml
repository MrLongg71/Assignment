<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.HomeActivity"
    tools:showIn="@layout/app_bar_home">
    <Button
        android:id="@+id/btnaddClass"
        android:textColor="#FFFFFF"
        android:layout_margin="5dp"
        android:textAlignment="center"
        android:drawableLeft="@drawable/add"
        android:background="@color/group_orgin"
        android:layout_width="match_parent"
        android:text="Thêm Lớp"
        android:padding="10dp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnseeClass"
        android:textColor="#FFFFFF"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:textAlignment="center"
        android:drawableLeft="@drawable/eys"
        android:background="@color/group_orgin"
        android:layout_width="match_parent"
        android:text="Xem Danh sách Lớp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnmanageClass"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:drawableLeft="@drawable/manage"
        android:background="@color/group_orgin"
        android:layout_width="match_parent"
        android:text="Quản lý sinh viên"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnSeeListSV"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:drawableLeft="@drawable/eys"
        android:background="@color/group_orgin"
        android:layout_width="match_parent"
        android:text="Xem danh sách Sinh viên"
        android:layout_height="wrap_content" />

</LinearLayout>